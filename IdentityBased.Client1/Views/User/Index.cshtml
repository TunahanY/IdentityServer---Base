
@{
    ViewData["Title"] = "Index";
}

@using Microsoft.AspNetCore.Authentication

<h1>Index</h1>
<a class="btn btn-secondary" asp-action="Logout">LogOut</a>
<a class="btn btn-success" asp-action="GetRefreshToken">Refresh RefreshToken</a>
<h3>ONLY USERS BITCH</h3>

@*<h2>
        @ViewData["userName"]
    </h2>*@

<h4>Claim:</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in User.Claims)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>


<h4>Authentication:</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth Property Key</th>
            <th>Auth Property Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>